@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex mt-5 col" style="margin-bottom:50px; align-items:center; justify-content:center;">
    <div class="col-3">
        <img src="~/img/logotipofv.png" class="align-content-center" width="300px" height="300px" />
    </div>
    <div class="text-center col-6" style="align-items:center; justify-content:center; text-align:center">
        <p class="display-4" style="font-weight:bold; font-size: 40px; margin: 0 0 0 100px">SEJA BEM VINDO (A)!</p>
        <p style="margin:50px 0 0 100px; padding:10; font-size:20px">
            Neste site, você encontrará informações práticas sobre como reciclar corretamente,
            alguns desafios diários para reduzir o desperdício, além de um Marketplace de economia circular,
            onde existem produtos para doação, trocas, ou mesmo vendas, com valores acessíveis.
        </p>
    </div>
</div>

