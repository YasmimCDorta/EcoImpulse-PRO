@{
    ViewData["Title"] = "Quiz";
    Layout = "~/Views/Shared/_Quiz.cshtml";
}



<div class="container d-flex justify-content-center align-items-center vh-100">
    <div id="quiz-container" class="p-4 bg-light rounded shadow">
        <h1>Quiz de Sustentabilidade</h1>
        <div id="question-container" class="fs-6"></div>
        <div id="options-container"></div>
        <button id="next-button" >Próxima Pergunta</button>
    </div>
    <div id="result-container" class="hidden">
        <h2>Parabéns!</h2>
        <p id="result-text"></p>
        <canvas id="canvas"></canvas>
        <button id="restart-button" >Jogar Novamente</button>
    </div>
</div>

<script src="~/js/Quiz.js"></script>
<script src="https://cdn.jsdelivr.net/npm/confetti-js@latest/dist/index.min.js"></script>

