<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoFinal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoFinal.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm" style="background-color: #11341C; height:90px;">
            <div class="container-fluid">
                ]
                <div class="logo">
                    <img id="logo" src="img/logotipofb.png" alt="logo do site" style=" display:flex; justify-content:center;  align-items:center; margin:10px; padidin:10px;  height: 100px;" />
                </div>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-expand d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Adic" asp-action="Adic">Adicionar Produto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Calc" asp-action="Calc">Calculadora Impacto</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div style="background-color: #91A566; height:50px;">
    </div>

    <div class="imagem-container">
        <img src="~/img/1.png" alt="Descrição da imagem" style=" display: block; width: 100%; height: 50%;  margin: 0;  padding: 0;">
        <img src="~/img/2.png" alt="Descrição da imagem" style=" display: block; width: 100%; height: auto;  margin: 0;  padding: 0;">
        <img src="~/img/3.png" alt="Descrição da imagem" style=" display: block; width: 100%; height: auto;  margin: 0;  padding: 0;">
        <img src="~/img/4.png" alt="Descrição da imagem" style=" display: block; width: 100%; height: auto;  margin: 0;  padding: 0;">
        <img src="~/img/5.png" alt="Descrição da imagem" style=" display: block; width: 100%; height: auto;  margin: 0;  padding: 0;">
        <img src="~/img/6.png" alt="Descrição da imagem" style=" display: block; width: 100%; height: auto;  margin: 0;  padding: 0;">
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: #91A566; height:70px;">
        <div class="container text-white text-center">
            &copy; 2024 - Quartetotech
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
