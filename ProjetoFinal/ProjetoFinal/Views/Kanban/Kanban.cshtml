@{
    ViewData["Title"] = "Kanban";
    Layout = "~/Views/Shared/_Kanban.cshtml";
}


<div>
    <div class="header text-center text-white">
        <h1> DESAFIOS SEMANAIS</h1>
    </div>

    <div class="container">
        <div class="column" data_column="1" ondrop="dropHandler(event)"
             ondragover="dragoverHandler(event)">
            <div class="head">
                <span class="text-white" style="font-size:25px;">A FAZER</span>
            </div>
            <div class="body">
                <div class="cards_list">
                    <button class="add_item" onclick="openModal(1)">
                        Adicionar Item
                    </button>
                </div>
            </div>
        </div>
        <div class="column" data_column="2" ondrop="dropHandler(event)"
             ondragover="dragoverHandler(event)">
            <div class="head">
                <span class="text-white" style="font-size:25px;">FAZENDO</span>
            </div>
            <div class="body">
                <div class="cards_list">
                    <button class="add_item" onclick="openModal(2)">
                        Adicionar Item
                    </button>
                </div>
            </div>
        </div>
        <div class="column" data_column="3" ondrop="dropHandler(event)"
             ondragover="dragoverHandler(event)">
            <div class="head">
                <span class="text-white" style="font-size:25px;">CONCLUÍDO</span>
            </div>
            <div class="body">
                <div class="cards_list">
                    <button class="add_item" onclick="openModal(3)">
                        Adicionar Item
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div id="modal">
        <div class="box">
            <div class="head">
                <span id="criarModeTitulo">Nova Tarefa</span>
                <span id="editaModeTitulo" style="display:none;">Editar Tarefa</span>
                <button onclick="closeModal()">x</button>
            </div>
            <div class="form">
                <input type="hidden" id="idInput" />
                <div class="form-group">
                    <label for="description">Descrição</label>
                    <textarea id="description" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <label for="priority">Prioridade</label>
                    <select id="priority">
                        <option>Baixa</option>
                        <option>Média</option>
                        <option>Alta</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="column">Coluna</label>
                    <select id="column">
                        <option value="1">A FAZER</option>
                        <option value="2">FAZENDO</option>
                        <option value="3">CONCLUÍDO</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="date">Prazo</label>
                    <input type="date" id="datetime" />
                </div>
                <button onclick="createTask()" id="criarModeBotao" style="background-color:antiquewhite; border:none; color:#000000; font-size:14px; padding: 9px 22px; border-radius: 4px; cursor:pointer; align-items:center;">
                    CRIAR
                </button>
                <button onclick="editarTask()" id="editarModeBotao" style="background-color:antiquewhite; border:none; color:#000000; font-size:14px; padding: 9px 22px; border-radius: 4px; cursor:pointer; align-items:center; display:none;">
                    SALVAR ALTERAÇÕES
                </button>
            </div>
        </div>
    </div>
    <script src="~/js/Moment.js"></script>
    <script src="~/js/DrapDrop.js"></script>
</div>
